<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN"
        "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">

<tiles-definitions>

    <!-- Default Main Template -->
    <definition name=".mainTemplate" template="/WEB-INF/tiles/mainTemplate.jsp">
        <put-attribute name="header" value="/WEB-INF/views/header.jsp"/>
        <put-attribute name="menu" value="/WEB-INF/views/menu.jsp"/>
        <put-attribute name="body" value="/WEB-INF/views/blank.jsp"/>
        <put-attribute name="footer" value="Footer" type="string"/>
    </definition>

    <definition name="homeTile" extends=".mainTemplate">
        <put-attribute name="body" value="/WEB-INF/views/home.jsp"/>
    </definition>

    <definition name="blankTile" extends=".mainTemplate">
        <put-attribute name="body" value="/WEB-INF/views/blank.jsp"/>
    </definition>

    <definition name="loginTile" extends=".mainTemplate">
        <put-attribute name="body" value="/WEB-INF/views/login.jsp"/>
    </definition>

    <definition name="listUsersTile" extends=".mainTemplate">
        <put-attribute name="body" value="/WEB-INF/views/users/list.jsp"/>
    </definition>

    <definition name="editUserTile" extends=".mainTemplate">
        <put-attribute name="body" value="/WEB-INF/views/users/edit.jsp"/>
    </definition>

    <definition name="changePasswordTile" extends=".mainTemplate">
        <put-attribute name="body" value="/WEB-INF/views/users/password.jsp"/>
    </definition>

    <definition name="newUserTile" extends=".mainTemplate">
        <put-attribute name="body" value="/WEB-INF/views/users/new.jsp"/>
    </definition>

</tiles-definitions>